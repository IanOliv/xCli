{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "scripthost",
      "es2015.promise",
      "es2015.generator",
      "es2015.iterable",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "outDir": "build",
    "strict": false,
    "target": "es5",
    "baseUrl": "./",
    "paths": {
      "@base/*": ["src/*"],
      "@utils/*": ["src/utils/*"],
      "#mocks/*": ["src/__tests__/__mocks__/*"],
      "@types/*": ["src/@types/*"],
      "@types": ["src/@types/index.d.ts"],
      "@commands/*": ["src/commands/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}