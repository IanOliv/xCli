{
  "name": "xcli",
  "version": "0.0.1",
  "description": "xcli CLI",
  "private": false,
  "types": "build/types/types.d.ts",
  "bin": {
    "xcli": "bin/xcli"
  },
  "scripts": {
    "format": "prettier --write **/*.{js,ts,json}",
    "lint": "tslint -p .",
    "clean-build": "rm -rf ./build",
    "compile": "tsc -p .",
    "copy-templates": "if [ -e ./src/templates ]; then cp -a ./src/templates ./build/; fi",
    "build": "yarn format && yarn lint && yarn clean-build && yarn compile && yarn copy-templates",
    "prepublishOnly": "yarn build",
    "test": "jest",
    "link": "yarn link",
    "watch": "jest --watch",
    "snapupdate": "jest --updateSnapshot",
    "coverage": "jest --coverage"
  },
  "files": [
    "tsconfig.json",
    "tslint.json",
    "build",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "enquirer": "^2.3.6",
    "gluegun": "^5.1.0",
    "socket.io-client": "^4.4.1"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.24",
    "@types/socket.io": "^3.0.2",
    "@types/ws": "^8.5.3",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.17.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^4.6.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
